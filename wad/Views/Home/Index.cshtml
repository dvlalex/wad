@model dynamic

@{
    ViewBag.Title = "Home";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
            
            <div class="row">
                <div class="col-md-6 col-md-offset-4 col-xs-12">
                    
                    <h1 class="heading">MIVE</h1>

                    <form role="form" id="inputForm">
                        <div class="form-group has-feedback">
                            <input type="url" class="form-control" id="inputSource" name="inputSource" placeholder="Enter a valid url here">
                            <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-circle-arrow-right"></i></button>
                        </div>
                        <div class="form-group form-inline">
                            <div class="radio radio-inline">
                                <label>
                                    <input type="radio" name="inputType" value="microData">
                                    microData
                                </label>
                            </div>
                            <div class="radio radio-inline">
                                <label>
                                    <input type="radio" name="inputType" value="microFormat">
                                    microFormat
                                </label>
                            </div>
                            <div class="radio radio-inline">
                                <label>
                                    <input type="radio" name="inputType" value="RDFa">
                                    RDFa
                                </label>
                            </div>
                        </div>
                        <br/>
                        <button type="button" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-circle-arrow-up"></i> Upload</button>
                    </form>

                </div>
            </div>
            
        </div>
    </div>
</div>